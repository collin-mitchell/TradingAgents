{
  "name": "TradingAgents Development Environment",
  "image": "mcr.microsoft.com/devcontainers/python:3.10",
  
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.flake8",
        "ms-python.pylint",
        "ms-toolsai.jupyter",
        "ms-python.debugpy",
        "charliermarsh.ruff",
        "ms-vscode.vscode-json"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.terminal.activateEnvironment": true,
        "python.formatting.provider": "black",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": true,
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.organizeImports": true
        }
      }
    }
  },

  "containerEnv": {
    "PYTHONPATH": "${containerWorkspaceFolder}",
    "PYTHONUNBUFFERED": "1"
  },

  "remoteEnv": {
    "FINNHUB_API_KEY": "${localEnv:FINNHUB_API_KEY}",
    "OPENAI_API_KEY": "${localEnv:OPENAI_API_KEY}",
    "ANTHROPIC_API_KEY": "${localEnv:ANTHROPIC_API_KEY}",
    "GOOGLE_API_KEY": "${localEnv:GOOGLE_API_KEY}"
  },

  "postCreateCommand": "pip install -e . && echo 'ðŸŽ‰ Codespace setup complete! Run: python validate_codespace.py to check your setup'",

  "forwardPorts": [8000, 8501],

  "mounts": [
    "source=${localWorkspaceFolder}/.env,target=${containerWorkspaceFolder}/.env,type=bind,consistency=cached"
  ],

  "workspaceFolder": "/workspaces/TradingAgents"
}